library 'jenkins-k8s-pipeline-scripts@v2'

pipeline {
  agent {
    label "jenkins-nodejs"
  }
  stages {
    stage('Build') {
      steps {
        ansiColor('xterm') {
          container('nodejs') {
            script {
              npm.withAuth() {
                sh "yarn install"
              }
            }
          }
        }
      }
    }
    stage('Lint') {
      steps {
        ansiColor('xterm') {
          container('nodejs') {
            script {
              npm.withAuth() {
                sh "yarn lint"
              }
            }
          }
        }
      }
    }
    stage('Test') {
      steps {
        ansiColor('xterm') {
          container('nodejs') {
            script {
              npm.withAuth() {
                sh "yarn test"
              }
            }
          }
        }
      }
    }
    stage('publish npm module') {
      when {
        tag "*"
      }
      steps {
        ansiColor('xterm') {
          container('nodejs') {
            script {
              npm.publish()
            }
          }
        }
      }
    }
    stage('publish storybook web server') {
      when {
        tag "*"
      }
      steps {
        ansiColor('xterm') {
          container('nodejs') {
            script {
              buildAndPush("rplan-corporate-design", "--build-arg NPM_TOKEN=${env.NPM_TOKEN}")
            }
          }
        }
      }
    }
  }
  post {
    failure {
      sendNotification currentBuild.result
    }
    fixed {
      sendNotification currentBuild.result
    }
  }
}
