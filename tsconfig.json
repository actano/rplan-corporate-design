{
  "compilerOptions": {
    "outDir": "./build/",
    "noImplicitAny": false,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "src/**/*.tsx",
    "test/**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
